<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Add new manager</h4>
        </div>

        <%= form_for :addmnager, url: '/managers', html: {class: 'torm-horizontal'} do %> 
          <div class="modal-body">
            <div class="form-group"> 
              <label for="inputName" class="col-sm-2" control-label>Manager name</label>
              <div class="col-sm-10">
                <input type="text" id="inputName" name="manager[name]" class="form-control" placeholder="Insert manager name" required>
              </div>
            </div>
            
            <div class="form-group"> 
              <label for="inputAddress" class="col-sm-2" control-label>Manager address</label>
              <div class="col-sm-10">
                <textarea type="text" id="inputAddress" name="manager[address]" class="form-control" placeholder="Insert manager address" required></textarea>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        <% end %>  
      </div>
    </div>
  </div>
</div>